<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/speedLayout"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:orientation="vertical"
            android:id="@+id/textLayout">
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pitchLayout"
        android:layout_above="@+id/backwardImageButton">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch\t\t1.0\t"
        android:id="@+id/pitchtextView" />
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pitchSeekbar"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pitchtextView"
        android:layout_alignParentEnd="true"
        android:progress="50"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/speedLayout"
        android:layout_above="@+id/pitchLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed\t\t1.0\t"
            android:id="@+id/speedtextView" />
        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speedSeekbar"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/speedtextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:progress="50"/>
    </RelativeLayout>



    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/backward"
        android:id="@+id/backwardImageButton"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/playImageButton"
        android:layout_toStartOf="@+id/playImageButton" />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/play"
        android:id="@+id/playImageButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/forward"
        android:id="@+id/forwardImageButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/playImageButton"
        android:layout_toEndOf="@+id/playImageButton" />

</RelativeLayout>